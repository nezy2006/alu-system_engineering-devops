#!/usr/bin/env bash

# Script to transfer a file from client to server using SCP

# Check if exactly 4 parameters are passed
if [ $# -lt 4 ]; then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

# Assign parameters to variables
FILE_PATH=$1
SERVER_IP=$2
USERNAME=$3
SSH_KEY=$4

# Perform SCP transfer to user's home directory (~) on the server
scp -i "$SSH_KEY" -o StrictHostKeyChecking=no "$FILE_PATH" "$USERNAME@$SERVER_IP:~/"

# Optional: print a success message
if [ $? -eq 0 ]; then
    echo "File '$FILE_PATH' successfully transferred to $USERNAME@$SERVER_IP:~/"
else
    echo "File transfer failed!"
fi

