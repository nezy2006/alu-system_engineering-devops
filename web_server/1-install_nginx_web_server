#!/usr/bin/env bash
# Installs and configures Nginx to serve "Holberton School" at / on a new Ubuntu machine

# Update package list and install nginx non-interactively
apt-get update -y
apt-get install -y nginx

# Ensure the root index page contains "Holberton School"
cat > /var/www/html/index.nginx-debian.html <<EOF
Holberton School for the win!
EOF

# Restart nginx using the service command (not systemctl)
service nginx restart

