#!/usr/bin/env bash
# Bash script to install Nginx on Ubuntu and serve "Holberton School" on port 80

# Update Ubuntu package lists
apt-get update -y

# Install Nginx
apt-get install -y nginx

# Start Nginx using service (without using systemctl)
service nginx start

# Create the required HTML page at root
echo "Holberton School" > /var/www/html/index.html

# Reload Nginx to apply changes
service nginx reload

