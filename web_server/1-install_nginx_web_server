#!/bin/bash
# Bash script to install Nginx and serve "Holberton School for the win!"
# Works without systemctl

# Update package lists
apt-get update -y

# Install nginx if not installed
apt-get install -y nginx

# Start nginx using service (avoiding systemctl)
service nginx start

# Create the required HTML page
echo "Holberton School for the win!" > /var/www/html/index.html

# Reload nginx to make sure the new page is served
service nginx reload

